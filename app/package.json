    "is-electron": "^2.2.0",
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "nem-sdk": "^1.6.7",
    "nem2-sdk": "^0.10.1",
    "nuxt": "^1.4.0",
    "vuetify": "^1.3.5",
